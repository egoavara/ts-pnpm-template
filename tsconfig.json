{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "composite": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    }
}